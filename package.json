{
    "name": "azure-backend-terraform-state-lock-waiter",
    "version": "1.0.0",
    "description": "Azure DevOps extension that until the Terraform state in a project with an Azure backend is not locked",
    "main": "buildAndReleaseTask/index.js",
    "scripts": {
        "build": "tsc",
        "package": "tfx extension create --manifest-globs vss-extension.json",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --write \"**/*.{ts,json,md}\"",
        "format:check": "prettier --check \"**/*.{ts,json,md}\"",
        "test": "mocha tests/**/_suite.js",
        "pretest": "tsc -p .",
        "clean": "node clean-compiled.js"
    },
    "keywords": [
        "azure-devops",
        "azure",
        "terraform",
        "extension"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "@azure/identity": "^4.0.0",
        "@azure/storage-blob": "^12.17.0",
        "azure-pipelines-task-lib": "^4.6.0",
        "source-map-support": "^0.5.21",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.19.24",
        "@types/q": "^1.5.5",
        "@types/sinon": "^17.0.2",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "dotenv": "^17.2.3",
        "eslint": "^8.54.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.1",
        "mocha": "^10.2.0",
        "prettier": "^3.1.0",
        "sinon": "^17.0.1",
        "tfx-cli": "^0.16.0",
        "typescript": "^5.3.0"
    }
}
